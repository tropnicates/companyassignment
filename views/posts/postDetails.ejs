<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <script
      src="https://kit.fontawesome.com/42a182743f.js"
      crossorigin="anonymous"
    ></script>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans&family=Roboto:wght@400;500&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/postDetails.css" />
    <title>Post Details</title>
  </head>
  <body>

    <%-include('../partials/navbar.ejs') %>

    <section class="container-flex">

      <main class="post-details">
        <article class="post-details-content">
          <img src="<%=post?.image%> " alt="" class="post-image" />
          <%if(post?.user?._id.toString() === userAuth?.toString()){%>
          <div class="post-details-action">
 
            <a href="/api/v1/posts/get-form-update/<%=post?._id%> ">
              <i class=".edit">Edit</i>
            </a>

            <form
              action="/api/v1/posts/<%=post?._id%>?_method=DELETE "
              method="post"
            >
              <button>
                <i class="delete">Delete</i>
              </button>
            </form>
          </div>
          <%}%>

          <h1 class="post-title"><%=post?.title%></h1>
          <p class="post-body"><%=post?.description%></p>
        </article>

        <div class="comment-form">
          <h2>Leave a comment</h2>
          <form action="/api/v1/comments/<%=post?._id%> " method="post">
            <div class="form-group">
              <input type="text" name="message" id="name" />
            </div>
            <button type="submit" class="btn">Submit</button>
          </form>
        </div>


        <div class="comments">
          <h2>Comments</h2>

          <%post?.comments?.forEach((comment)=>{%>
          <div class="comment">
            <div class="comment-info">
              <img
                src="<%=comment?.user?.profileImage%>"
                alt=""
                class="comment-author-image"
              />
              <div class="comment-author">
                <h4><%=comment?.user?.fullname%></h4>
                <span><%=comment?.createdAt.toLocaleDateString()%></span>
              </div>
            </div>
            <div class="comment-body">
              <p><%=comment?.message%></p>

              <%if(comment?.user?._id?.toString() === userAuth?.toString()){%>
                <div class="post-details-action"">
                  <a href="/api/v1/comments/<%=comment?._id%> " class="comment-update">
                    <i class="">Edit</i>
                  </a>

                  <form
                    action="/api/v1/comments/<%=comment?._id%>?_method=DELETE&postId=<%=post?._id%>"
                    method="post"
                  >
                    <button>
                      <i class="delete-comment">Delete</i>
                    </button>
                  </form>
                </div>
             <%}%> 
             
            </div>
          </div>
          <%})%>
        </div>
      </main>

      <aside class="sidebar">
        <div class="about-me">
          <h2>About The Author</h2>
          <img
            class="avatar"
            src="<%=post?.user?.profileImage%>"
            alt="profile image"
          />

          <h2 class="about-name"><%=post?.user?.fullname%></h2>
          <small><%=post?.user?.role%></small>
          <p class="about-me-bio"><%=post?.user?.bio%></p>
        </div>


      </aside>
    </section>

    <%-include('../partials/footer.ejs') %>
  </body>
</html>
